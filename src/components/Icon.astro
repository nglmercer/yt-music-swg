---
// src/components/Icon.astro
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'svg'> {
  name: string;
  size?: number;
}

const { name, size = 24, class: className, ...rest } = Astro.props;

// En un proyecto real, podrías tener un sistema más robusto para los iconos.
// Aquí usamos un ejemplo simple.
const paths: { [key: string]: string } = {
  notifications: "M10 20h4V10h-4v10zm-6 0h4v-5H4v5zM16 9h4V4h-4v5z",
  playback: "M8 5v14l11-7z",
  privacy: "M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z",
  account: "M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z",
};
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="currentColor"
  class:list={[className]}
  {...rest}
>
  <path d={paths[name]}></path>
</svg>